<div class= "container">
  <h1>Louez l’impossible, vivez l’extraordinaire.</h1>
  <hr>
  <div class="d-flex flex-wrap">
    <% if @offers.present? %>
      <% @offers.each do |offer| %>
        <div class="card m-3" style="width: 18rem;">
          <img src="<%= offer.image %>" class="card-img-top" alt="<%= offer.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= offer.name %></h5>
            <%= link_to 'Voir cette offre', offer_path(offer), class: 'btn btn-outline-primary rounded-pill' %>
            <p class="card-text"><%= offer.description.truncate(100) %></p>
            <p class="card-text">Hôte: <%= offer.user.username%></p>
            <p class="card-text"><%= offer.price%> <i class="fa-solid fa-coins" style="color: #F4DB12;"></i></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No offers available.</p>
    <% end %>
  </div>
</div>
