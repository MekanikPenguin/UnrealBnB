<h1><%= @offer.name  %></h1>
<p><%= @offer.address %></p>
<p><%= @offer.image %></p>
<p><%= @offer.price %></p>
<p><%= @offer.description %></p>

<hr>
<div data-controller="datepicker">
  <%= simple_form_for [@offer, @booking], data: {controller:'datepicker'} do |f| %>
      <%= f.input :start_date, data: {controller:'datepicker', datepicker_target: "start"}, placeholder: "select dates", as: :string %>
      <%= f.input :end_date, data: {controller:'datepicker', datepicker_target: "end"}, placeholder: "select dates", as: :string %>
      <%= f.submit "Book", class: "btn btn-primary", data: {controller:'datepicker', datepicker_target: "bookButton"}, disabled: true %>
  <% end %>
</div>
