<div class="map" style="background-image: url('<%= @offer.image %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="offer-show-card">
        <h1><%= @offer.name %></h1>
        <p class="offer-show-address"><%= @offer.address %></p>
      </div>
    </div>

    <div class="col-4">

      <div class="offer-show-card">
        <h5>Reservation</h5>
        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Reserver" class="btn btn-warning mt-2" style="width: 100%">
        </form>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div class="row">
      <div class="col-8">
        <div class="offer-show-card">
          <h3>Un endroit de rêve...</h3>
          <p><%= @offer.description %></p>
        </div>
      </div>
      <div class="col-4">
        <div class="offer-show-card">
          <h3>Prix</h3>
          <div class="flex ms-3">
            <p class="price"> <%= @offer.price %> € *</p>
            <br>
            <p class="little_text"><i>* le prix n'est pas imaginaire</i></p>
          </div>
        </div>
        <div class="offer-show-card">
          <div class="flex-align">
            <h6 class="no-mb">Share</h6>

            <div class="flex">
              <i class="fa-brands fa-facebook-square me-2"></i>
              <i class="fa-brands fa-twitter-square me-2"></i>
              <i class="fa-brands fa-pinterest-square me-2"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
