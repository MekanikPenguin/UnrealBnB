<div class="map" style="background-image: url('<%= @offer.image.attached? ? cl_image_path(@offer.image.key) : @offer.url_image %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="offer-show-card">
        <h1><%= @offer.name %></h1>
        <p><%= @offer.description %></p>
        <p class="price"><i class="fa-solid fa-coins" style="color: #000000;"></i><%= @offer.price %> *</p>
        <p class="little_text"><i>* le prix n'est pas imaginaire</i></p>
        <br>
        <p class="offer-show-address"><%= @offer.address %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="offer-show-card">
        <h5>Reservation</h5>
          <%= simple_form_for [@offer, @booking] do |f| %>
            <%= f.input :start_date, input_html: {data: {controller:'datepicker', datepicker_target: "start"}, placeholder: "select dates"}, as: :string %>
            <%= f.input :end_date, input_html: {data: {controller:'datepicker', datepicker_target: "end"}, placeholder: "select dates"}, as: :string %>
            <%= f.submit "Book", class: "btn btn-primary rounded" %>
          <% end %>
      </div>
    </div>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
