<div class="text-center">
  <div class="mt-4">
    <h1>Détails de vos offres</h1>
  </div>
  <p><%= link_to "Ajouter une nouvelle location", new_offer_path, class: "btn btn-primary link-underline link-underline-opacity-0 mb-3 mt-2 " %></p>
</div>
<div class="container">
  <div class="d-flex flex-wrap">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% current_user.offers.each do |offer| %>
        <div class="card m-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><strong><%= offer.name %></strong></h5>
            <img src="<%= offer.image.attached? ? cl_image_path(offer.image.key) : offer.url_image %>" class="card-img-top" alt="<%= offer.name %>">
            <p class="card-text mb-2"><%= offer.description %></p>
            <div class="d-flex justify-content-between">
            <%= link_to 'Modifier', edit_offer_path(offer), class: 'btn btn-outline-success' %>
            <%= link_to 'Détails', offer_path(offer), class: 'btn btn-outline-secondary' %>
            <%= button_to 'Supprimer', offer_path(offer), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

