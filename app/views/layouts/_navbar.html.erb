<div class="navbar navbar-expand-sm navbar-light navbar-lewagon bg-light sticky-top">
  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand d-flex" do %>
      <%= image_tag 'Logo.png' %>
      <p id="logo", class="modal-dialog modal-dialog-centered fw-medium fs-2">UnrealBnB©</p>
    <% end %>

    <% if user_signed_in? %>
      <div class="navbar-text-center-custom">
        <h4>Bienvenue <%= current_user.username %> <%= image_tag 'Castle.png' %> </h4>
      </div>
    <%end%>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Mes réservations", mybookings_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mes offres", myoffers_path, class: "nav-link me-2" %>
          </li>
          <li class="nav-item dropdown">
            <%= render 'layouts/set_vava', vava: current_user %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
